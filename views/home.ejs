<div class="media-scroller snaps-inline" id="container">
	<% posts.forEach(function(post){ %>
	<div class="media-element">
		<h2><%=post.title.substring(0, 130)%></h2>
		<a href="/posts/<%=post._id%>">
			<img id="postimg" src="<%=post.img%>" alt="<%=post.title%>" />
		</a>

		<p class="title">
			<%=post.content.substring(0, 240) + "..."%>
			<a class="styleAnchor" href="/posts/<%=post._id%>">Read More</a>
		</p>
	</div>

	<% }) %>
</div>

