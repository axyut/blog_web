<%- include("partials/header"); -%>


<h2>Feature your Blog / Contact </h2>

<form action="/publish" method="post">
    <input class="logoe" type="text" name="name" placeholder="*Full Name" required>
    <br>
    <input class="logoe" type="text" name="email" placeholder="*Email Address" required>
    <br>
    <textarea class="logoee" name="postTitle" cols="34" rows="5" required> Title: </textarea>
    <br>
    <textarea class="logoee" name="postBody" cols="34" rows="17" aria-placeholder="Body" required> Body:</textarea>
    <br>
    <button class="button" type="submit" name="button" >SEND</button>
</form>

<%- include("partials/footer"); -%>